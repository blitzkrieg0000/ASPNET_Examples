@model List<ProductListModel>
@{
    Layout="_Layout";
}   
@if(Model.Count > 0)
{
<h2>Kategori Listesi</h2>
<div class="text-end">
    <a asp-action="Create" asp-controller="Category">Yeni Kategori Oluştur</a>
</div>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Ürün</th>
      <th scope="col">Stok</th>
      <th scope="col">Fiyat</th>
      <th scope="col">İşlemler</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var product in Model)
    {
    <tr>
      <th scope="row">@product.Id</th>
      <td>@product.Name</td>
      <td>@product.Stock</td>
      <td>@product.Price</td>
      <td>
        <a class="btn btn-danger" asp-action="Remove" asp-controller="Product" asp-route-id="@product.Id">Sil</a>
        <a class="btn btn-danger" asp-action="Update" asp-controller="Product" asp-route-id="@product.Id">Güncelle</a>
      </td>
    </tr>    
    }
    
  </tbody>
</table>
}
else
{


}
