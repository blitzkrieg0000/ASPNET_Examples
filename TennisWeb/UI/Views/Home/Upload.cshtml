@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    if (TempData["Upload_Message"] != null)
    {
        <div class="bg-primary text-white text-center lead">
            @TempData["Upload_Message"]
        </div>
    }
}

<div class="card">
    <div class="card-header border-bottom header-elements-inline">
        <h6 class="card-title">Analiz Edilecek Dosyayı Yükleyiniz</h6>
    </div>

    <form class="wizard-form steps-starting-step" asp-action="Upload" method="post" enctype="multipart/form-data"
        data-fouc>

        <h6>Video Bilgileri</h6>
        <fieldset>

            <div class="row justify-content-center">
                <div class="col-lg-6 align-self-center"></div>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-6 align-self-center">
                    <div class="form-group">
                        <label for="formFile">Dosya:</label>
                        <input id="formFile" type="file" name="formFile" class="form-control" />
                    </div>
                </div>
            </div>

        </fieldset>

        <h6>Ek Bilgi</h6>
        <fieldset data-step-start>

            <div class="row justify-content-center">
                <div class="col-lg-6 align-self-center"></div>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-6 align-self-center">
                    <div class="form-group">

                        <label for="formFile">Stream İsmi:</label>
                        <input id="name" type="name" name="name" class="form-control" />

                    </div>
                </div>
            </div>

        </fieldset>

    </form>

</div>


@section Scripts{

<script src="~/limitless/global_assets/js/demo_pages/form_wizard.js"></script>
<script src="~/limitless/global_assets/js/plugins/forms/wizards/steps.min.js"></script>
<script src="~/limitless/global_assets/js/plugins/forms/inputs/inputmask.js"></script>
<script src="~/limitless/global_assets/js/plugins/forms/validation/validate.min.js"></script>
<script src="~/limitless/global_assets/js/plugins/extensions/cookie.js"></script>

}