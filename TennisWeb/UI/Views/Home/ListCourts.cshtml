
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body>
    <div class="container my-2">
        <div class="text-end my-2">
            <a asp-action="Create" asp-controller="Home" class="btn btn-primary btn-sm">Yeni İş Ekle</a>
        </div>

        <table class="table table-hover table-bordered table-sm">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Player_Id
                    </th>
                    <th>
                        Court_Id
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.PlayerId</td>
                        <td>@item.CourtId</td>
                        <td>
                            <a asp-action="Update" asp-controller="Home" asp-route-id="@item.Id"
                            class="btn btn-warning btn-sm">Güncelle</a>
                        </td>
                        <td>
                            <a asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id"
                            class="btn btn-danger btn-sm">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
