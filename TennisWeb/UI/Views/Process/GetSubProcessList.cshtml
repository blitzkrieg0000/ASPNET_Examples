@model List<ProcessListDto>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    if (TempData["ResponseMessage"] != null)
    {
        <div class="bg-primary text-white text-center lead">
            @TempData["ResponseMessage"]
        </div>
    }
}

@section Links{
<link rel="stylesheet" type="text/css" href="~/assets/css/ProcessCard.css" />
<style>
    .card img {
        width: 100%;
    }

    .card {
        background-color: #1c183c7d;
        border-radius: 20px;
    }

    .content.pt-0 {
        background-image: radial-gradient(farthest-corner at 40px 40px, #f35 0%, #43e 100%);
        z-index: 0;
    }

    svg {
        display: initial;
    }
</style>
}

<div class="wrapper">
    <div class="cards">
        <h4 class="pen-title">
            Process Listesi
        </h4>

        @foreach (var item in Model)
        {
            <div class="card">

                <div class="card-content">
                    <div class="top">
                        <h4 class="name">@item.Name</h4>
                        <div class="date"><span>"@item.SaveDate"</span></div>
                    </div>

                    <div class="bottom">
                        @if (item.IsCompleted)
                        {
                            <h4>Sonuçlandı.</h4>
                            <a class="btn btn-success btn-sm" asp-action="GetSubProcessParameter" asp-controller="ProcessParameter"
                        asp-route-id="@item.ProcessParameterId"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                            fill="currentColor" class="bi bi-clipboard-data" viewBox="0 0 16 16">
                                    <path
                                d="M4 11a1 1 0 1 1 2 0v1a1 1 0 1 1-2 0v-1zm6-4a1 1 0 1 1 2 0v5a1 1 0 1 1-2 0V7zM7 9a1 1 0 0 1 2 0v3a1 1 0 1 1-2 0V9z" />
                                    <path
                                d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z" />
                                    <path
                                d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3z" />
                                </svg>
                                Detay
                            </a>

                        }
                        else if (!item.IsCompleted)
                        {
                            <h4>İşleniyor...</h4>
                            <i class="icon-spinner2 spinner"></i>
                        }
                        else
                        {
                            <h4>Durum Bilinmiyor</h4>
                        }


                    </div>
                </div>

                <div class="card-bg">
                    <img class="bg-img" src="https://cdn.stocksnap.io/img-thumbs/960w/SKI2T9YF2P.jpg" />
                </div>

                <div class="shadow">
                    <img class="shadow-img" src="https://cdn.stocksnap.io/img-thumbs/960w/SKI2T9YF2P.jpg" />
                </div>

            </div>
        }




    </div>
</div>

@section Scripts{
}