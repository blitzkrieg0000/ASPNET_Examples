@model List<SessionListDto>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    if (TempData["ResponseMessage"] != null)
    {
        <div class="bg-primary text-white text-center lead">
            @TempData["ResponseMessage"]
        </div>
    }
}

@section Links{
<style>
    .radial-gradient {
        background-image: radial-gradient(farthest-corner at 40px 40px, #f35 0%, #43e 100%);
    }

    .dataTables_scroll .dataTables_scrollBody {
        max-height: 100% !important;
        height: 100% !important;
    }
</style>
}


<!-- Scrollable datatable -->
<div class="card">

    <div class="card-header">
        <h5 class="card-title">Video/Stream Listesi</h5>
    </div>

    <div class="card-body">

        <td class="text-center">
            <a asp-action="Create" asp-controller="Session" class="btn btn-success btn-sm">Ekle</a>
        </td>

    </div>

    <table class="table datatable-scroll-y " width="100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ad</th>
                <th>Kayıt</th>
                <th>Aktiflik</th>
                <th>İşlemler</th>
                <th>Diğer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.SaveDate</td>
                    <td>
                        @{
                            if ((bool)item.IsActivated)
                            {
                                <span class="badge badge-success">1</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">0</span>
                            }
                        }
                    </td>
                    <td>
                        <a asp-action="Remove" asp-controller="Session" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>

                        <a asp-action="Detail" asp-controller="Session" asp-route-id="@item.Id" class="btn btn-success btn-sm">Detay</a>

                        <a asp-action="Index" asp-controller="Process" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Giriş</a>
                    </td>
                    <td class="text-center">
                        <div class="list-icons">
                            <div class="dropdown">

                                <a href="#" class="list-icons-item" data-toggle="dropdown">
                                    <i class="icon-menu9"></i>
                                </a>

                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="btn btn-danger btn-sm dropdown-item">Yakında...</a>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
<!-- /scrollable datatable -->


@section Scripts{
<script src="~/limitless/global_assets/js/plugins/tables/datatables/datatables.min.js"></script>
<script src="~/limitless/global_assets/js/demo_pages/datatables_basic.js"></script>
}