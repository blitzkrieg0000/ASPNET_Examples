@model List<WorkListDto>

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Todo App</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/node_modules/bootstrap/dist/css/bootstrap.min.css">

</head>

<body>
    <div class="container my-2">
        <div class="text-end my-2">
            <a asp-action="Create" asp-controller="Home" class="btn btn-primary btn-sm">Yeni İş Ekle</a>
        </div>

        <table class="table table-hover table-bordered table-sm">
            <thead>
                <tr>
                    <th>
                        İş
                    </th>
                    <th>
                        Durumu
                    </th>
                    <th>
                        İşlem
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Definition</td>
                        <td>@(item.IsCompleted? "Tamamlandı" : "Tamamlanmadı")</td>
                        <td>
                            <a asp-action="Update" asp-controller="Home" asp-route-id="@item.Id"
                            class="btn btn-warning btn-sm">Güncelle</a>
                        </td>
                        <td>
                            <a asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id"
                            class="btn btn-danger btn-sm">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>

</html>